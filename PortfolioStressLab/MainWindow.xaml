<Window x:Class="PortfolioStressLab.Wpf.MainWindow"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 mc:Ignorable="d"
 Title="Portfolio Stress Lab (QuantCore.Net + Tinkoff)" Height="820" Width="1200"
 WindowStartupLocation="CenterScreen">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0">
            <TextBlock FontSize="20" FontWeight="SemiBold" Text="Portfolio Stress Lab" DockPanel.Dock="Left"/>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Button Content="Load Portfolio" Padding="12,6" Margin="8,0,0,0"
 Command="{Binding LoadCommand}" />
                <Button Content="Load History (VaR/ES)" Padding="12,6" Margin="8,0,0,0"
 Command="{Binding LoadHistoryCommand}" />
                <Button Content="Recalculate" Padding="12,6" Margin="8,0,0,0"
 Command="{Binding RecalcCommand}" />
                <TextBlock FontSize="20" FontWeight="SemiBold" Margin="20 0" Text="USDT TRC20 на развите софта: "/>
                <TextBox VerticalAlignment="Center" Width="300">TNSGpeVzNJcEA6MyXP9PmgmFaZk5zaascV</TextBox>
            </StackPanel>
        </DockPanel>

        <!-- Status -->
        <Border Grid.Row="1" Margin="0,10,0,0" Padding="10" CornerRadius="8" Background="#111827">
            <DockPanel>
                <TextBlock Foreground="#E5E7EB" Text="{Binding Status}" />
                <TextBlock Foreground="#93C5FD" DockPanel.Dock="Right" Text="{Binding ConnectedInfo}" />
            </DockPanel>
        </Border>

        <!-- Sliders -->
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="Stress Controls" Margin="0,0,8,0">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,0,0,10">
                        <DockPanel>
                            <TextBlock Text="Index shock (%)" />
                            <TextBlock DockPanel.Dock="Right" Text="{Binding IndexShockPct,StringFormat=F2}" />
                        </DockPanel>
                        <Slider Minimum="-50" Maximum="50" Value="{Binding IndexShockPct,UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>

                    <StackPanel Grid.Row="1" Margin="0,0,0,10">
                        <DockPanel>
                            <TextBlock Text="Volatility shock (%)" />
                            <TextBlock DockPanel.Dock="Right" Text="{Binding VolShockPct,StringFormat=F2}" />
                        </DockPanel>
                        <Slider Minimum="-80" Maximum="200" Value="{Binding VolShockPct,UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>

                    <StackPanel Grid.Row="2" Margin="0,0,0,10">
                        <DockPanel>
                            <TextBlock Text="Rate shock (bps)" />
                            <TextBlock DockPanel.Dock="Right" Text="{Binding RateShockBps,StringFormat=F0}" />
                        </DockPanel>
                        <Slider Minimum="-500" Maximum="500" Value="{Binding RateShockBps,UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>

                    <StackPanel Grid.Row="3">
                        <DockPanel>
                            <TextBlock Text="Correlation crisis (0..1)" />
                            <TextBlock DockPanel.Dock="Right" Text="{Binding CorrelationCrisis,StringFormat=F2}" />
                        </DockPanel>
                        <Slider Minimum="0" Maximum="1" Value="{Binding CorrelationCrisis,UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>

                </Grid>
            </GroupBox>

            <GroupBox Grid.Column="1" Header="Key Metrics" Margin="8,0,0,0">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="{Binding TotalMarketValueText}" FontSize="14" />
                    <TextBlock Grid.Row="1" Text="{Binding StressPnlText}" FontSize="18" FontWeight="SemiBold" Margin="0,6,0,0"/>
                    <TextBlock Grid.Row="2" Text="{Binding VarText}" FontSize="14" Margin="0,8,0,0"/>
                    <TextBlock Grid.Row="3" Text="{Binding EsText}" FontSize="14" Margin="0,4,0,0"/>
                    <TextBlock Grid.Row="4" Text="{Binding Notes}" Foreground="#6B7280" TextWrapping="Wrap" Margin="0,10,0,0"/>

                </Grid>
            </GroupBox>

        </Grid>

        <!-- Positions table -->
        <GroupBox Grid.Row="3" Header="Positions (stress contribution)" Margin="0,10,0,0">
            <DataGrid ItemsSource="{Binding Positions}" AutoGenerateColumns="False" IsReadOnly="True"
 CanUserAddRows="False" CanUserDeleteRows="False" HeadersVisibility="Column"
 GridLinesVisibility="Horizontal" RowHeaderWidth="0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Ticker" Binding="{Binding Ticker}" Width="90"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding InstrumentType}" Width="90"/>
                    <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}" Width="90"/>
                    <DataGridTextColumn Header="Price" Binding="{Binding LastPrice}" Width="120"/>
                    <DataGridTextColumn Header="Value" Binding="{Binding MarketValue}" Width="140"/>
                    <DataGridTextColumn Header="Stress PnL" Binding="{Binding StressPnl}" Width="140"/>
                    <DataGridTextColumn Header="Delta" Binding="{Binding Delta}" Width="90"/>
                    <DataGridTextColumn Header="Vega" Binding="{Binding Vega}" Width="90"/>
                    <DataGridTextColumn Header="Rho" Binding="{Binding Rho}" Width="90"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Footer -->
        <TextBlock Grid.Row="4" Margin="0,10,0,0" Foreground="#6B7280"
 Text="Tip:set token in appsettings.json or environment variable TINKOFF_TOKEN. History load is optional (VaR/ES requires candles)."/>
    </Grid>
</Window>
